programa {
  funcao inicio() {
    // Declaração de variável
        inteiro numero

        // Solicita ao usuário que insira um número
        escreva("Digite um número: ")
        leia(numero)

        // Verifica se o número é par ou ímpar
        se (numero % 2 == 0)
        
        escreva("O número ", numero, " é par.\n")
      
        senao
        
        escreva("O número ", numero, " é ímpar.\n")
        
  }
}
